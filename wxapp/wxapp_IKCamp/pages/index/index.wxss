/* pages/index/index.wxss */
page{
  padding: 0;
  bottom: 0;
  background: #fff;
}
.group{
  width: 100%;
  position: relative;
}
.group-bar{
  width: 100%;
  height: 90rpx;
  background: #fff;
  margin: 25rpx 0 15rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.group-title{
  font-size: 20rpx;
  padding: 12rpx;
  border: 1px solid #e3e3e3;
}
.group-content{
  background: #fff;
  margin: 0 0 25rpx 0;
}
.group-content-item{
  display: flex;
  margin: 0 35rpx 25rpx;
  height: 260rpx;
  /* display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis; */
}
.group-content-item_desc{
  float: left;
  flex: 360rpx;
  font-size: 30rpx ;
  font-weight: bold;
  margin: 0 35rpx;
  letter-spacing: .4em;
  text-indent: 2em;

}
.group-content-item-image{
  flex:260rpx;
  height: 194rpx;
}