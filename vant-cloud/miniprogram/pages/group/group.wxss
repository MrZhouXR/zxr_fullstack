/* miniprogram/pages/group/group.wxss */
page{
  height: 100%;
}
.group-body{
  background-color: #f2f2f2;
  width: 100%;
  height: 100%;
  padding: 40rpx 0;
  overflow-x: hidden;
  overflow-y: auto;
}
.pubilc-list{
  width: 90%;
  background-color: #fff;
  margin: 0 auto 20rpx;
  border-radius: 20rpx;
}
.public-header{
  display: flex;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f2f2f2;
  font-size: 35rpx;
}
.pubilc-icon{
  margin-right: 18rpx;
}
.public-item{
  padding: 20rpx;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.creater{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.public-item-name{
  font-size: 30rpx;
  color: #313131;
  max-width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}