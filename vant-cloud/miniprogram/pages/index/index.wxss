.new-item{
  width: 80%;
  background-color: #fff;
  border-radius: 38rpx;
  height: 200rpx;
  text-align: center;
  margin-right: 40rpx auto;
  box-shadow: 0px 7px 20px #ececec;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  transition: all .5s;
}
.new-item image{
  width: 124rpx;
  height: 124rpx;
}
.right-corner{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.right-corner .item-name{
  margin-right: 14rpx;
}
.icon-arrow{
  text-align: right;
  padding-right: 13rpx;
}
.new-item:hover{
  box-shadow: none;
}