*
  margin 0
  padding 0
.wrapper
  width 100%  
  .section1
    overflow hidden
    width 100%
    height 600px
    background url(./image/section1-bg.png) no-repeat
    background-size 100% 100%
    .title
      width 708px
      height 138px
      font-weight lighter
      font-family: Exo-Thin
      font-size 55px
      line-height 75px
      letter-spacing 2px
      color #282828
      margin 140px auto 0
      text-align center
    .button
      width: 190px;
      height: 50px;
      background-color: #ff6d6d;
      border-radius: 3px
      margin 0 auto
      margin-top 39px
      overflow hidden
      .button-try
        text-align center
        margin-top: 18px
        color: #ffffff
    .button-start
      margin-top 43px
      text-align center
      img 
        width 59px
        height 59px
    .head-detail
      margin-top 15px
      text-align center
      font-size: 10px
      letter-spacing: 1px;
      opacity .6
  .section2
    display: flex
    .section2-left
      flex: 700
      padding 140px
      p
        font-size: 10px
        letter-spacing: 3px
        line-height 30px
        color: #ff6d6d
      .title
        min-width 500px
        font-size: 35px
        font-weight: normal 
        line-height 50px
        letter-spacing: 2px
        margin-top 16px
      .desc
        min-width 500px
        height 200px
        font-size: 13px
        font-family: Exo-Medium;
        line-height 26px
        letter-spacing 1px
        color: #282828
        opacity .66
        margin-top 45px
    .section2-right
      flex: 540
      height 724px
      background #ededed
      .triangle
        width: 0;
        height: 0;
        border-bottom: 500px solid #fb8686;
        border-left: 542px solid transparent;
        margin-top 225px
  .section3
    position relative
    height 675px
    background: url(./image/pen-holder.png)
    p
      padding-top:  138px
      font-size: 10px
      letter-spacing: 3px
      line-height 30px
      color: #ff6d6d
      text-align center
    .section3-title
      width 425px
      line-height: 50px
      letter-spacing: 2px
      font-size: 25px
      text-align center
      margin 0 auto
    .img-earphone
      position absolute
      width 150px
      height 215px
      top 0px
      right: 152px
    .main
      margin-top 91px
      ul
        display: flex
        list-style: none
        .first-li
          margin-left 148px
        li
          float left
          width 317px
          height 202px
          clear both
          margin-right 43px
          .li-image
            display: block
            margin 0 auto
          .image-title
            line-height: 50px;
            letter-spacing: 1px;
            font-size: 15px
            text-align center
          .image-desc
            width 317px
            font-family: Exo-Medium;
            font-size 10px
            text-align center
            line-height: 26px;
            letter-spacing: 1px;
            opacity 0.66

